						"exec": [
							"pm.test(\"Validar versión de protocolo TLS incorrecta\", function () {\r",
							"    // Si hubo un error en la solicitud, validar el mensaje de error\r",
							"    if (pm.response === undefined || pm.response.error) {\r",
							"        pm.expect(pm.response.error).to.include('1005184:error:1000042e:SSL routines:OPENSSL_internal:TLSV1_ALERT_PROTOCOL_VERSION');\r",
							"    } else {\r",
							"        // Si la solicitud tuvo éxito, fallar el test, ya que se esperaba un error\r",
							"        pm.expect.fail(\"Se esperaba un error de protocolo TLS y no ocurrió.\");\r",
